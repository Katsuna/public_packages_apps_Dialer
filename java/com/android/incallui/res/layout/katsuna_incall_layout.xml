<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incall_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InCallActivity">

    <include layout="@layout/katsuna_call_info" />

    <Button
        android:id="@+id/bluetooth_button"
        style="@style/KatsunaButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/katsuna_layout_margin"
        android:layout_marginStart="@dimen/katsuna_layout_margin"
        android:layout_marginTop="56dp"
        android:drawableStart="@drawable/katsuna_phone_in_talk_black54_28dp"
        android:text="@string/incall_label_audio" />

    <ToggleButton
        android:id="@+id/mute_button"
        style="@style/KatsunaButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/katsuna_layout_margin"
        android:layout_marginStart="@dimen/katsuna_layout_margin"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/katsuna_mic_off_black_28dp"
        android:textOff="@string/mute"
        android:textOn="@string/mute" />

    <Button
        android:id="@+id/dialpad_button"
        style="@style/KatsunaButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/katsuna_layout_margin"
        android:layout_marginStart="@dimen/katsuna_layout_margin"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/katsuna_123"
        android:text="@string/dialpad" />

    <ToggleButton
        android:id="@+id/hold_button"
        style="@style/KatsunaButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="@dimen/katsuna_layout_margin"
        android:layout_marginStart="@dimen/katsuna_layout_margin"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/katsuna_pause_black_28dp"
        android:textOff="@string/hold_call"
        android:textOn="@string/hold_call" />

    <include layout="@layout/katsuna_divider" />

    <FrameLayout
        android:id="@+id/end_call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/katsuna_layout_margin"
        android:layout_marginStart="@dimen/katsuna_layout_margin"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:padding="10dp">

        <TextView
            style="@style/KatsunaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/katsuna_call_end_black_28dp"
            android:drawablePadding="16dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/end_call"
            android:textColor="@color/common_black" />

    </FrameLayout>


</LinearLayout>